<h1><%= @station.name %></h1>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <%= link_to "Bus Schedule Home", stations_path, :class => "navbar-brand" %>
  <p class="pull-right navbar-text"> <%= @station.name %> </p>
  <div class="btn-group-xs">
    <button type="button" class="new btn btn-default navbar-btn">Edit</button>
    <button type="button" class="btn btn-default navbar-btn">
      <%= link_to "Delete", station_path(@station), :class => "" ,
                                                    :confirm => "Are you sure?",
                                                    :method => "delete"%></button>
  </div>
</nav>
<hr>
<p>Lines</p>
<ul>
  <% @station.lines.sort_by{|l|l.name}.each do |line| %>
    <li><%= line.name %></li>
  <%end%>
</ul>


<hr>
<div class="hidden_form">
  <%= render 'form' %>
</div>

